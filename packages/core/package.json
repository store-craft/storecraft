{
  "name": "@storecraft/core",
  "version": "1.0.3",
  "description": "Core Package for storecraft",
  "license": "MIT",
  "author": "Tomer Shalev (https://github.com/store-craft)",
  "homepage": "https://github.com/store-craft/storecraft",
  "repository": {
    "type": "git",
    "url": "https://github.com/store-craft/storecraft.git",
    "directory": "packages/core"
  },
  "keywords": [
    "commerce",
    "dashboard",
    "code",
    "storecraft"
  ],
  "main": "index.js",
  "type": "module",
  "types": "./types.public.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./types.public.d.ts"
    },
    "./package.json": "./package.json",
    "./v-api": {
      "import": "./v-api/public.js",
      "types": "./v-api/types.public.d.ts"
    },
    "./v-api/*": {
      "import": "./v-api/*"
    },
    "./v-storage": {
      "import": "./v-storage/public.js",
      "types": "./v-storage/types.public.d.ts"
    },
    "./v-crypto": {
      "import": "./v-crypto/public.js",
      "types": "./v-crypto/types.public.d.ts"
    },
    "./v-ql": {
      "import": "./v-ql/index.js",
      "types": "./v-ql/types.d.ts"
    },
    "./v-payments": {
      "import": "./v-payments/public.js",
      "types": "./v-payments/types.public.d.ts"
    },
    "./v-mailer": {
      "import": "./v-mailer/public.js",
      "types": "./v-mailer/types.public.d.ts"
    },
    "./v-database": {
      "import": "./v-database/public.js",
      "types": "./v-database/types.public.d.ts"
    },
    "./v-platform": {
      "import": "./v-platform/public.js",
      "types": "./v-platform/types.public.d.ts"
    },
    "./v-extensions": {
      "import": "./v-extensions/public.js",
      "types": "./v-extensions/types.public.d.ts"
    },
    "./v-pubsub": {
      "import": "./v-pubsub/public.js",
      "types": "./v-pubsub/types.public.d.ts"
    },
    "./v-rest": {
      "import": "./v-rest/index.js",
      "types": "./v-rest/types.public.d.ts"
    }
  },
  "scripts": {
    "core:test": "uvu -c",
    "core:gen:zod": "npx ts-to-zod ./v-api/types.api.d.ts ./v-api/types.autogen.zod.api.js",
    "core:gen:vql": "node ./v-ql/compile.js",
    "core:gen:open-api": "node ./v-rest/docs.openapi.gen.js",
    "core:publish": "npm publish --access public"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.4.0",
    "@types/node": "^20.11.0",
    "peggy": "^3.0.2",
    "ts-to-zod": "^3.6.1",
    "uvu": "^0.5.6"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
