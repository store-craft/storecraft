{
  "name": "@storecraft/core",
  "version": "1.0.22",
  "description": "Core Package for storecraft",
  "license": "MIT",
  "author": "Tomer Shalev (https://github.com/store-craft)",
  "homepage": "https://github.com/store-craft/storecraft",
  "engines": {
    "node": "v16.14.0 || v17.1.0 || v18.20.0 || >=v20.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/store-craft/storecraft.git",
    "directory": "packages/core"
  },
  "keywords": [
    "commerce",
    "dashboard",
    "code",
    "storecraft"
  ],
  "main": "index.js",
  "type": "module",
  "types": "./types.public.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./types.public.d.ts"
    },
    "./package.json": "./package.json",
    "./assets/*": {
      "import": "./assets/*"
    },
    "./api": {
      "import": "./api/public.js",
      "types": "./api/types.public.d.ts"
    },
    "./api/*": {
      "import": "./api/*"
    },
    "./storage": {
      "import": "./storage/public.js",
      "types": "./storage/types.public.d.ts"
    },
    "./storage/*": {
      "import": "./storage/*"
    },
    "./storage/node": {
      "import": "./storage/node/index.js",
      "types": "./storage/node/types.public.d.ts"
    },
    "./storage/deno": {
      "import": "./storage/deno/index.js",
      "types": "./storage/deno/types.public.d.ts"
    },
    "./storage/bun": {
      "import": "./storage/bun/index.js",
      "types": "./storage/bun/types.public.d.ts"
    },
    "./crypto": {
      "import": "./crypto/public.js",
      "types": "./crypto/types.public.d.ts"
    },
    "./vql": {
      "import": "./vql/index.js",
      "types": "./vql/types.d.ts"
    },
    "./payments": {
      "import": "./payments/public.js",
      "types": "./payments/types.public.d.ts"
    },
    "./payments/*": {
      "import": "./payments/*"
    },
    "./payments/dummy": {
      "import": "./payments/dummy/index.js",
      "types": "./payments/dummy/types.public.d.ts"
    },
    "./tax": {
      "import": "./tax/public.js",
      "types": "./tax/types.public.d.ts"
    },
    "./mailer": {
      "import": "./mailer/public.js",
      "types": "./mailer/types.public.d.ts"
    },
    "./database": {
      "import": "./database/public.js",
      "types": "./database/types.public.d.ts"
    },
    "./platform": {
      "import": "./platform/index.js",
      "types": "./platform/types.public.d.ts"
    },
    "./platform/*": {
      "import": "./platform/*"
    },
    "./platform/node": {
      "import": "./platform/node/index.js",
      "types": "./platform/node/types.public.d.ts"
    },
    "./platform/deno": {
      "import": "./platform/deno/index.js",
      "types": "./platform/deno/types.public.d.ts"
    },
    "./platform/cloudflare-workers": {
      "import": "./platform/cloudflare-workers/index.js",
      "types": "./platform/cloudflare-workers/types.public.d.ts"
    },
    "./platform/aws-lambda": {
      "import": "./platform/aws-lambda/index.js",
      "types": "./platform/aws-lambda/types.public.d.ts"
    },
    "./platform/bun": {
      "import": "./platform/bun/index.js",
      "types": "./platform/bun/types.public.d.ts"
    },
    "./platform/google-functions": {
      "import": "./platform/google-functions/index.js",
      "types": "./platform/google-functions/types.public.d.ts"
    },
    "./extensions": {
      "import": "./extensions/public.js",
      "types": "./extensions/types.public.d.ts"
    },
    "./extensions/*": {
      "import": "./extensions/*"
    },
    "./extensions/postman": {
      "import": "./extensions/postman/index.js",
      "types": "./extensions/postman/types.public.d.ts"
    },
    "./extensions/notifications": {
      "import": "./extensions/notifications/index.js"
    },
    "./pubsub": {
      "import": "./pubsub/public.js",
      "types": "./pubsub/types.public.d.ts"
    },
    "./rest": {
      "import": "./rest/index.js",
      "types": "./rest/types.public.d.ts"
    },
    "./test-runner": {
      "import": "./test-runner/index.js"
    }
  },
  "scripts": {
    "test": "npm run core:test",
    "prepublishOnly": "npm run core:gen:zod && npm run core:gen:open-api && npm run core:test && npm version patch --force",
    "core:test": "uvu -c",
    "core:gen:zod": "npx ts-to-zod@latest ./api/types.api.d.ts ./api/types.autogen.zod.api.js --skipValidation",
    "core:gen:vql": "node ./vql/compile.js",
    "core:gen:open-api": "node ./rest/docs.openapi.gen.js"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.4.0",
    "@storecraft/database-sqlite": "^1.0.7",
    "@types/node": "^20.11.0",
    "peggy": "^3.0.2",
    "uvu": "^0.5.6"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
