{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "composite": true,
  },
  "include": [
    "*", 
    "src/*", 
    "migrations.sqlite/*", 
    "migrations.postgres/*", 
    "migrations.mysql/*", 
    "tests/*.js"
  ]
}