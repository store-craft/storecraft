{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "maxNodeModuleJsDepth": 100,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "*",
    "**/*",
    "src/*"
  ],
  "exclude": [
    "**/*.json"
  ]
}
